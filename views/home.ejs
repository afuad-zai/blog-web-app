<%- include("partials/header.ejs") %>
  <div class="row">
    <div class="col-md-4">
      <aside class="text-center text-lg-start py-5">
        <img
          src="/images/b-logo-black.svg"
          class="bi me-2"
          alt="B Icon"
          width="200"
        />
        <div>
          <h1>MyBlog</h1>
          <p>Your blog for anything and everything.</p>
        </div>
      </aside>
    </div>
    <div class="col">
      <main>
        <% for(var i=0; i < blogs.length; i++) { %>
        <article class="blog-post">
          <h1><%= blogs[i].title %></h1>
          <p class="blog-post-meta d-flex align-items-center">
            <img
              src="/images/calendar.svg"
              class="bi me-2"
              alt="calendar icon"
              width="24"
              height="24"
            /><%= blogs[i].date %>
          </p>
          <p><%= blogs[i].body %></p>
        </article>
        <% } %>
      </main>
    </div>
  </div>

<%- include("partials/footer.ejs") %>

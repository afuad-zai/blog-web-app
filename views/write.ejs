<%- include("partials/header.ejs") %>

<div class="container">
  <form action="/write">
    <div class="form-group pb-3">
      <label for="title">Title</label>
      <input
        type="textarea"
        class="form-control"
        id="title"
        placeholder="Title"
        name="title"
      />
    </div>
    <div class="form-group pb-3">
      <label for="leadInText">Lead-in Text</label>
      <input
        type="textarea"
        class="form-control"
        id="leadInText"
        placeholder="Lead-in Text"
        name="leadInText"
      />
    </div>
    <div class="form-group pb-3">
      <label for="content">Content</label>
      <textarea
        class="form-control"
        id="content"
        placeholder="Content"
        style="min-height: 40vh;"
        name="body"
      ></textarea>
    </div>

    <div class="d-flex justify-content-end gap-2">
      <button class="btn btn-dark" formmethod="post">Save</button>
    </div>
  </form>
</div>
<%- include("partials/footer.ejs") %>

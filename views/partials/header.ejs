<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Blog Web App</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/content.css" />
  </head>
  <header class="p-3 text-bg-dark">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-start">
        <a
          href="/"
          class="d-flex align-items-center text-white me-auto text-decoration-none"
        >
          <img
            src="/images/b-logo.svg"
            class="bi me-2"
            alt="B Icon"
            width="40"
            height="32"
          />
          <span class="fs-4">MyBlog</span>
        </a>

        <ul class="nav nav-pills">
          <% if (locals.isAuth && locals.isAuth == true) { %>
            <li class="nav-item">
              <a href="/write" class="btn btn-warning">Write</a>
            </li>
            <li class="nav-item ms-2">
              <a href="/" class="btn btn-outline-light">Manage Blog</a>
            </li>
            <li class="nav-item ms-2">
              <a href="/logout" class="btn btn-outline-light">Logout</a>
            </li>
            <% } else { %>
          <li class="nav-item">
            <a href="/login" class="btn btn-warning">Login</a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </header>

  <body class="d-flex flex-column min-vh-100">
    <main class="container pt-3">
